%h1 All active events
%table
  %thead
    %tr
      %th{:colspan => "3"}
  %tbody
    - if @events.any?
      %table.table.tableHeader
        %thead
          %tr
            %td
              Event title
            %td
              Location
            %td
              Date and time
            %td
              Female Only
            %td
              Children Welcome
            %td
              Childcare
      - @events.each do |event|
        %table.table
          %thead
            %tr
              %td
                = event.title
              %td
                = event.location
              %td
                = event.date_and_time.to_formatted_s(:short)
              %td
                = translateBoolean(event.female_only).html_safe
              %td
                = translateBoolean(event.children_welcome).html_safe
              %td
                = translateBoolean(event.childcare).html_safe