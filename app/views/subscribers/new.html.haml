.container
  .row
    .col-md-6
      %h3 Tell us about yourself, so we can invite you to camp meetings that are useful for you.

      = form_for @subscriber do |f|
        - if @subscriber.errors.any?
          - @subscriber.errors.full_messages.each do |error|
            = error

        .form-group
          = f.text_field :name, autofocus: true, placeholder: 'name', class: 'form-control'
        .form-group
          = f.email_field :email, autofocus: true, placeholder: 'email', class: 'form-control'
        .form-group
          = f.text_field :mobile, autofocus: true, placeholder: 'mobile number', class: 'form-control'
        .form-group
          = f.collection_select :community_id, Community.all, :id, :name, {prompt: "Select your community"}, {class: 'form-control'}
        .actions
          = f.submit "Sign up", class: 'btn btn-large'
