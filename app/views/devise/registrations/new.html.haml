.container
  .row
    .col-md-6
      %h2 Sign up
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .form-group
          = f.text_field :name, autofocus: true, placeholder: 'name', class: 'form-control'
        .form-group
          = f.email_field :email, autofocus: true, placeholder: 'email', class: 'form-control'
        .form-group
          = f.text_field :mobile, autofocus: true, placeholder: 'mobile number', class: 'form-control'
        .form-group
          = f.password_field :password, autocomplete: "off", placeholder: 'password (8 char min)', class: 'form-control'
        .form-group
          = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'confirm password', class: 'form-control'
        .actions
          = f.submit "Sign up", class: 'btn btn-large'
