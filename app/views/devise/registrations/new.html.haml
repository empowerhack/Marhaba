%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .form-group
    = f.text_field :name, autofocus: true, placeholder: 'name'
  .form-group
    = f.email_field :email, autofocus: true, placeholder: 'email'
  .form-group
    = f.text_field :mobile, autofocus: true, placeholder: 'mobile number'
  .form-group
    = f.password_field :password, autocomplete: "off", placeholder: 'password (8 char min)'
  .form-group
    = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'confirm password'
  .actions
    = f.submit "Sign up"
